# Google Maps API Key
# Google Cloud ConsoleでMaps JavaScript API、Places APIを有効にし、
# APIキーを取得して設定してください
GOOGLE_MAPS_API_KEY=your_api_key_here

# Flask Secret Key
# セキュリティのため、本番環境では必ず変更してください
SECRET_KEY=your_secret_key_here

# メール送信設定
# テスト用Gmailアカウント設定
# ※ 以下のアカウントでテストできます
# アカウント: japanese.class.test@gmail.com
# ※ セキュリティのため、Gmailの「アプリパスワード」を使用します
# アプリパスワードの設定手順：
# 1. Googleアカウントの2段階認証を有効にする
# 2. セキュリティ > 2段階認証プロセス > アプリパスワード から生成
# 3. 生成されたパスワードを MAIL_PASSWORD に設定
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=japanese.class.test@gmail.com
MAIL_PASSWORD=abcd efgh ijkl mnop  # ここにアプリパスワードを設定
MAIL_DEFAULT_SENDER=japanese.class.test@gmail.com

# reCAPTCHA設定
# Google reCAPTCHA v2で取得したキーを設定
RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here
RECAPTCHA_ENABLED=True